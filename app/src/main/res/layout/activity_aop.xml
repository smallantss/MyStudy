<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnNoParams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="普通方法No Params!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnParams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="普通方法With Params!"
        android:onClick="onClick"
        app:layout_constraintStart_toStartOf="@+id/btnNoParams"
        app:layout_constraintTop_toBottomOf="@+id/btnNoParams" />

    <Button
        android:id="@+id/annoNoParams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="注解NoParams"
        app:layout_constraintStart_toStartOf="@+id/btnParams"
        app:layout_constraintTop_toBottomOf="@+id/btnParams" />

    <Button
        android:id="@+id/annoParams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="注解Params"
        app:layout_constraintStart_toStartOf="@+id/annoNoParams"
        app:layout_constraintTop_toBottomOf="@+id/annoNoParams" />

</androidx.constraintlayout.widget.ConstraintLayout>