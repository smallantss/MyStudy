<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RemoteActivity">

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tvConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连接"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/tvClientSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客户端发"
        app:layout_constraintStart_toEndOf="@+id/tvConnect"
        app:layout_constraintTop_toTopOf="@+id/tvConnect" />

    <Button
        android:id="@+id/tvServerSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务端发"
        app:layout_constraintStart_toEndOf="@+id/tvClientSend"
        app:layout_constraintTop_toTopOf="@+id/tvClientSend" />
</androidx.constraintlayout.widget.ConstraintLayout>