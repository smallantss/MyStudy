<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:minWidth="660px"
    android:minHeight="400px">

    <ImageView
        android:id="@+id/ivExit"
        android:layout_width="32px"
        android:layout_height="32px"
        android:layout_margin="40px"
        android:background="#ff0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26px"
        android:text="提示"
        android:textColor="#3D3F46"
        android:textSize="34px"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="90px"
        android:layout_marginLeft="90px"
        android:layout_marginEnd="90px"
        android:layout_marginRight="90px"
        android:gravity="center"
        android:text="是否要退出当前系统?"
        android:textColor="#3D3F46"
        android:textSize="30px"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tvConfirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="180px"
        android:layout_height="64px"
        android:layout_marginBottom="40px"
        android:background="@drawable/bg_home_cancel"
        android:gravity="center"
        android:text="取消"
        android:textColor="#3D3F46"
        android:textSize="30px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvConfirm"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvConfirm"
        android:layout_width="180px"
        android:layout_height="64px"
        android:layout_marginStart="40px"
        android:layout_marginLeft="40px"
        android:gravity="center"
        android:text="确定"
        android:textColor="#FFFFFF"
        android:textSize="30px"
        android:background="@drawable/bg_class_begin"
        app:layout_constraintBottom_toBottomOf="@id/tvCancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvCancel"
        app:layout_goneMarginBottom="40px"
        app:layout_goneMarginStart="0px" />


</androidx.constraintlayout.widget.ConstraintLayout>